<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<TextView
    android:id="@+id/lv_header"
    android:visibility="visible"
    android:textSize="15dp"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text="@string/near_week"	        
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin" />

<RelativeLayout
    android:id="@+id/lv_content"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

    <CheckBox
		android:id="@+id/lv_checked"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:paddingTop="4dp"
		android:checked="false"
		android:focusable="false" />    	
	
    <LinearLayout
        android:orientation="vertical" 
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_toRightOf="@id/lv_checked" >
        
        <TextView
			android:id="@+id/lv_note_head"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#cbcaca"
			android:textSize="20dp" />
        
		<TextView
			android:id="@+id/lv_note_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#cbcaca"
			android:textSize="14dp" />
		
    </LinearLayout>
       
	<ImageView
		android:id="@+id/lv_img"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:paddingTop="4dp"	
		android:background="@drawable/listview_img"		
		android:layout_alignParentRight="true" />
  		
	<LinearLayout
		android:orientation="vertical" 
		android:layout_height="wrap_content" android:layout_width="wrap_content" 
		android:layout_toLeftOf="@id/lv_img" >
		
		<TextView
			android:id="@+id/lv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#cbcaca"
			android:textSize="14dp" />
		<TextView
			android:id="@+id/lv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#cbcaca"
			android:textSize="12dp" />
	</LinearLayout>


	    
</RelativeLayout>

</FrameLayout>